<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<br />
<%= link_to "Edit Article", edit_article_path(@article), id: "editLink" %>
<%= link_to "Delete Article", article_path(@article), method: :delete, id: "deleteLink", data: {confirm: "Really delete the article?"} %>
<br /><br /><br /><br />
<h3>Comments (<% @article.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
<br /><br />
<%= link_to "<< Back to Articles List", articles_path, id: "backLink" %>